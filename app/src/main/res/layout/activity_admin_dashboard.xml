<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    android:orientation="vertical"
    tools:context=".AdminDashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/background_top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewAdminImage"
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/avatar" />

        <TextView
            android:id="@+id/textViewAdminName"
            android:layout_width="152dp"
            android:layout_height="33dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="ADMIN"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_card">

            <ImageView
                android:id="@+id/imageViewmanageStudent"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/student" />

            <TextView
                android:id="@+id/textViewManageStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:gravity="center"
                android:text="MANAGE STUDENT"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/imageViewmanageStudent"
                app:layout_constraintStart_toStartOf="@+id/imageViewmanageStudent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewmanageStudent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/background_card">

            <ImageView
                android:id="@+id/imageViewmanageMess"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mess_img" />

            <TextView
                android:id="@+id/textViewManageMess"
                android:layout_width="113dp"
                android:layout_height="26dp"
                android:layout_marginTop="9dp"
                android:text="MANAGE MESS"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/imageViewmanageMess"
                app:layout_constraintHorizontal_bias="0.461"
                app:layout_constraintStart_toStartOf="@+id/imageViewmanageMess"
                app:layout_constraintTop_toBottomOf="@+id/imageViewmanageMess" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_card">

            <ImageView
                android:id="@+id/imageViewmanageContractor"
                android:layout_width="100dp"
                android:layout_height="85dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/contractor" />

            <TextView
                android:id="@+id/textViewManageContractor"
                android:layout_width="147dp"
                android:layout_height="34dp"
                android:gravity="center"
                android:text="MANAGE CONTRACTOR"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/imageViewmanageContractor"
                app:layout_constraintHorizontal_bias="0.468"
                app:layout_constraintStart_toStartOf="@+id/imageViewmanageContractor"
                app:layout_constraintTop_toBottomOf="@+id/imageViewmanageContractor" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_card">

            <ImageView
                android:id="@+id/imageViewmanageBill"
                android:layout_width="100dp"
                android:layout_height="85dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bill" />

            <TextView
                android:id="@+id/textViewManageBill"
                android:layout_width="102dp"
                android:layout_height="28dp"
                android:layout_marginTop="5dp"
                android:text="MANAGE BILL"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/imageViewmanageBill"
                app:layout_constraintStart_toStartOf="@+id/imageViewmanageBill"
                app:layout_constraintTop_toBottomOf="@+id/imageViewmanageBill" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>